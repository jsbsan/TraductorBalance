        For Each dtmp In listaApuesta
            If dtmp.tipo = "normal" Then
                TextAreaBalance.text &= Replace(TextBoxId.text, "\n", "") & "\t"
                TextAreaBalance.text &= Format(DateBoxFechaHora.value, "dd/mm/yyyy") & "\t"
