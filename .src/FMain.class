                    TextAreaBalance.text &= Str$(- datoBeneficio) & "\t" & "terminada" & "\n"
                    ZZbeneficio = True
                Endif

            Endif

        Next
    Endif

    If RadioButtonFree.value = True And RadioButtonPrepartido.value = True Then
